
@{
    ViewBag.Title = "Index";
}

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <style>
        /* Simple styling */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        header {
            background-color: #333;
            color: white;
            padding: 10px 0;
            text-align: center;
        }

        nav {
            display: flex;
            justify-content: center;
            background-color: #444;
        }

            nav a {
                color: white;
                padding: 14px 20px;
                text-decoration: none;
                text-align: center;
            }

                nav a:hover {
                    background-color: #ddd;
                    color: black;
                }

        .container {
            text-align: center;
            margin-top: 50px;
        }

        .hero-image {
            width: 100%;
            max-height: 400px;
            object-fit: cover;
            margin-bottom: 30px;
        }

        footer {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 10px;
            position: fixed;
            width: 100%;
            bottom: 0;
        }
    </style>
</head>
<body>

    <header>
        <h1>My ASP.NET MVC Website</h1>
    </header>

    <nav>
        <a href="@Url.Action("Index", "Home")">Home</a>
        <a href="@Url.Action("About", "Home")">About</a>
        <a href="@Url.Action("Services", "Home")">Services</a>
        <a href="@Url.Action("Contact", "Home")">Contact</a>
    </nav>

    <div class="container">
        <!-- Hero Image -->
        <img src="https://via.placeholder.com/1200x400" alt="Hero Image" class="hero-image" />

        <!-- Welcome Message -->
        <h2>Welcome to Our Website!</h2>
        <p>This is a simple website created with ASP.NET MVC. Use the navigation bar above to explore the pages.</p>
    </div>

    <footer>
        <p>&copy; 2024 My ASP.NET MVC Website | All Rights Reserved</p>
    </footer>

</body>
</html>


