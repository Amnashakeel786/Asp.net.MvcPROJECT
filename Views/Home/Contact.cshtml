
@{
    ViewBag.Title = "Contact";
}

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        nav {
            display: flex;
            justify-content: center;
            background-color: #444;
        }

            nav a {
                color: white;
                padding: 14px 20px;
                text-decoration: none;
                text-align: center;
            }

                nav a:hover {
                    background-color: #ddd;
                    color: black;
                }

        .container {
            text-align: center;
            margin-top: 50px;
        }

        footer {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 10px;
            position: fixed;
            width: 100%;
            bottom: 0;
        }

        form {
            display: inline-block;
            text-align: left;
            margin-top: 20px;
        }

        input[type="text"], input[type="email"], textarea {
            width: 300px;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ddd;
        }

        input[type="submit"] {
            padding: 10px 20px;
            background-color: #444;
            color: white;
            border: none;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #555;
            }
    </style>
</head>
